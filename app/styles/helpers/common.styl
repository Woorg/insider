.page
	position relative
	padding-top 50px
	background #fff
	color #333333
	font-family $rR
	font-weight normal
	font-size 14px
	line-height 1.714
	tr(all .3s linear)

	&_insider
		background url('../images/content/hero-insider.jpg') 50% 0 no-repeat
		background-size 2560px 462px
		// .main

		.nav__item_course
			margin-right -2px
			background-color #dc324d
		.nav__item_course_pro
			margin-left 0
			background-color transparent


	&_insider-pro
		background url('../images/content/hero-insider-pro.jpg') 50% 0 no-repeat
		background-size 2560px 462px
		// .main

		.nav__item_course
			background-color transparent
		.nav__item_course_pro
			margin-left -2px
			background-color #dc324d

	&_location
		background url('../images/content/location-bg.jpg') 50% 0 no-repeat
		background-size 2560px 328px

	&_teachers
		background url('../images/content/teachers-bg.jpg') 50% 0 no-repeat
		background-size 2560px 328px

	h1
		margin-top 0

	img
		display block
		max-width 100%
		height auto


.title-h1
	margin-top 0
	color #000
	font-family $s
	font-size 50px
	font-weight normal
	line-height 1.1
	text-transform uppercase
	letter-spacing tracking(-20)

.button
	outline none
	border none
	padding-top 20px
	padding-right 30px
	padding-left 30px
	padding-bottom 18px
	display inline-block
	vertical-align top
	font-size 14px
	text-transform uppercase
	tr(all .3s ease)
	&:hover
		text-decoration none

	&_primary
		background-color #dc324d
		color #ffffff
		font-weight normal
		font-family $rB
		letter-spacing tracking(0)
		box-shadow 0 0 16px rgba(0, 0, 0, 0.24)
		&:hover
			box-shadow none
			color #ffffff

	&_additional
		background-color #FFF
		font-family $rSb
		letter-spacing tracking(50)
		color #000
		&:hover
			color #000

		span
			position relative
			padding-right 16px
			&:after
				position absolute
				top 50%
				right 0
				width 0
				height 0
				border-style solid
				border-width 5px 0 5px 6px
				border-color transparent transparent transparent #000000
				transform translateY(-50%)
				content ""



.video-button
	position relative
	margin auto
	margin-bottom 16px
	border none
	width 105px
	height 105px
	box-shadow 0 0 27px rgba(0, 0, 0, 0.28)
	background-color #ffffff
	border-radius 50%
	cursor pointer
	hide-text()
	&:after,
	&:before
		position absolute
		top 50%
		left 50%
		width 0
		height 0
		border-style solid
		border-width 15.5px 0 15.5px 18px
		border-color transparent transparent transparent #000000
		content ""
		transform translate(calc(-50% + 4px), -50%)
