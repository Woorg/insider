html,
body
	height 100%
.page
	position relative
	padding-top 50px
	min-width 320px
	min-height 100%
	background #fff
	color #333333
	font-family $rR
	font-weight normal
	font-size 14px
	line-height 1.714
	+selection()
		background #333
		color #FFF
	tr(all .3s linear)

	&_insider
		background url('../images/content/hero-insider.jpg') 50% 0 no-repeat
		background-size 2560px 462px

		.nav-list__item_course
			margin-right -2px
			background-color #dc324d
			+r($d)
				margin auto
				background-color transparent
		.nav-list__item_course_pro
			margin-left 0
			background-color transparent

	&_insider-pro
		background url('../images/content/hero-insider-pro.jpg') 50% 0 no-repeat
		background-size 2560px 462px

		.nav-list__item_course
			background-color transparent
		.nav-list__item_course_pro
			margin-left -2px
			background-color #dc324d
			+r($d)
				margin auto
				background-color transparent

	&_location
		background url('../images/content/location-bg.jpg') 50% 0 no-repeat
		background-size 2560px 328px
		+r($tL)
			background url('../images/content/location-bg.jpg') calc(50% + 50px) calc(0% - 128px) no-repeat
			background-size 2560px 328px
		+r($t)
			background url('../images/content/location-bg.jpg') calc(50% + 50px) calc(0% - 128px) no-repeat
			background-size 2560px 328px

		+r($m)
			background url('../images/content/location-small-bg.jpg') 50% 0 no-repeat
			background-size 425px 200px

	&_teachers
		background url('../images/content/teachers-bg.jpg') 50% 0 no-repeat
		background-size 2560px 328px
		+r($tL)
			background url('../images/content/teachers-bg.jpg') calc(50% + 50px) calc(0% - 128px) no-repeat
			background-size 2560px 328px
		+r($t)
			background url('../images/content/teachers-bg.jpg') calc(50% + 50px) calc(0% - 128px) no-repeat
			background-size 2560px 328px

		+r($m)
			background url('../images/content/teachers-bg.jpg') 50% 0 no-repeat
			background-size 425px 200px

	h1
		margin-top 0
	img
		display block
		max-width 100%
		height auto

.title-h1
	margin-top 0
	color #000
	font-family $s
	font-size 50px
	font-weight normal
	line-height 1.1
	text-transform uppercase
	letter-spacing tracking(-20)
	+r($m)
		font-size 32px

.button
	position relative
	outline none
	border none
	min-width 215px
	max-width 250px
	padding-top 20px
	padding-right 30px
	padding-left 30px
	padding-bottom 18px
	display inline-block
	vertical-align top
	font-size 14px
	text-transform uppercase
	overflow hidden
	-webkit-backface-visibility hidden
	-moz-osx-font-smoothing grayscale
	tr(transform background opacity box-shadow .3s cubic-bezier(0.2, 1, 0.3, 1))
	&:hover
		text-indent -9999px
		text-decoration none
		transition transform 0.3s, opacity 0.3s
		&:before
			opacity 1
			transform translate3d(0, 0, 0)

	&:before
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		padding-top 20px
		padding-right 30px
		padding-left 30px
		padding-bottom 18px
		width 100%
		height 100%
		content attr(data-text)
		opacity 0
		font-size 14px
		color initial
		text-indent 0
		transform translate3d(0, 25%, 0)
		transition transform 0.3s, opacity 0.3s
		transition-timing-function cubic-bezier(0.2, 1, 0.3, 1)

	&_primary,
	&_submit
		background-color #dc324d
		color #ffffff
		font-weight normal
		font-family $rB
		letter-spacing tracking(0)
		box-shadow 0 0 16px rgba(0, 0, 0, 0.24)
		&:hover
			box-shadow none
			color #ffffff
		&:before
			color #FFF

	&_additional
		background-color transparent
		font-family $rSb
		letter-spacing tracking(50)
		color #000
		&:hover
			color #000
			span
				display block
				&:after
					position absolute
					z-index 1
					top 50%
					right -15px
					width 0
					height 0
					border-style solid
					border-width 5px 0 5px 6px
					border-color transparent transparent transparent #000000
					transform translateY(-50%)
					content ''

		span
			position relative
			padding-right 16px
			&:after
				position absolute
				top 50%
				right 0
				width 0
				height 0
				border-style solid
				border-width 5px 0 5px 6px
				border-color transparent transparent transparent #000000
				transform translateY(-50%)
				content ''

		&:before
			color #000
			span
				&:after
					position absolute
					z-index 1
					top 50%
					right 0
					width 0
					height 0
					border-style solid
					border-width 5px 0 5px 6px
					border-color transparent transparent transparent #000000
					transform translateY(-50%)
					content ''

		&.button_additional-big
			font-size 16px
			&:before
				font-size 16px
			span
				padding-right 0
				&:after
					right -19px
			&:hover
				span
					&:after
						right -8px

	&_submit
		&:before
			content attr(value)

.video-button
	position relative
	margin auto
	margin-bottom 16px
	border none
	width 105px
	height 105px
	box-shadow 0 0 27px rgba(0, 0, 0, 0.28)
	background-color #ffffff
	border-radius 50%
	cursor pointer
	hide-text()
	&:after,
	&:before
		position absolute
		top 50%
		left 50%
		width 0
		height 0
		border-style solid
		border-width 15.5px 0 15.5px 18px
		border-color transparent transparent transparent #000000
		content ''
		transform translate(calc(-50% + 4px), -50%)
