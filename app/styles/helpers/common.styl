.page
	position relative
	background #fff
	font-display swap
	font-family $t
	font-weight normal
	font-size 20px
	color #212121
	line-height 1.5
	tr(all .3s linear)
	+r($d)
		width 1230px
	+r($m)
		width 100%

	&__overlay
		position absolute
		z-index 9
		top 0
		left 0
		right 0
		bottom 0
		display none
		background rgba(0,0,0, .5)
		tr(all .3s ease)
	&__overlay_active
		display block
		cursor pointer
		tr(all .3s ease)

	.logo
		width 380px
		height 100px
		background url('../images/general/logo.png') 0 0 / cover no-repeat
		hide-text()
		+r($m)
			width 277px
			height 73px
	.logo_sec
		+r($m)
			width 226px
			height 59px
			background url('../images/general/logo.png') 0 0 / cover no-repeat
			// @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
	.logo
		+r($m)
			background url('../images/general/logo.png') 0 0 / cover no-repeat
			background-size cover

	.logo_sec
		+r($m)
			background url('../images/general/logo.png') 0 0 / cover no-repeat
			background-size cover


.container
	margin auto
	padding-right 15px
	padding-left 15px
	width 1230px
	+r($m)
		padding-left 10px
		padding-right 10px
		width 360px

.title
	font-weight bold
	font-size 48px
	text-transform uppercase
	+r($m)
		font-size ( $titleSize / 2 )px
		line-height 1.3

.title-sec
	position relative
	padding-bottom 10px
	font-size 36px
	font-weight bold
	text-transform uppercase
	+r($m)
		font-size ( $titleSize / 2 )px
		line-height 1.3

	&:after
		position absolute
		bottom 0
		left 0
		width 141px
		height 4px
		content ''
		background-color #60cbe8
		color #FFF

img
	display block
	max-width 100%
	height auto



.wysiwyg

	h1
		margin-top 0
		margin-bottom 50px
		font-weight bold
		font-size 48px
		text-transform uppercase
		+r($m)
			font-size ( $titleSize / 2 )px
			line-height 1.3

	h2,
	h3,
	h4
		margin-top 0
		margin-bottom 30px
		position relative
		padding-bottom 10px
		font-size 36px
		font-weight bold
		text-transform uppercase
		+r($m)
			font-size ( $titleSize / 2 )px
			line-height 1.3
		&:after
			position absolute
			bottom 0
			left 0
			width 141px
			height 4px
			content ''
			background-color #60cbe8
			color #FFF

	p
		margin-bottom 30px
		font-size 16px
		line-height 1.625
		letter-spacing tracking(-25, 16)
		&:last-child
			margin-bottom 0
