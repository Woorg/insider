.courses
	&__in
		padding-top 114px
		padding-bottom 98px
		+r($tL)
			padding-top 58px
			padding-bottom 58px
	&__row
		+r($tL)
			display flex
			flex-flow row wrap
			justify-content space-between
			align-items stretch
			flex 1
	&__col
		+r($tM)
			margin-bottom 30px
			&:last-child
				margin-bottom 0
	&__course
		height 100%
		tr(all .3s ease-out)
		+r($tL)
			display flex
			flex-flow column wrap
			justify-content flex-start
			align-items stretch
			flex 1
			float none
		&:hover
			tr(all .3s ease-out)
			transform translateY(-5px)
			box-shadow rgba(45,45,45,.05) 0 2px 2px, rgba(49,49,49,.05) 0 4px 4px, rgba(42,42,42,.05) 0 8px 8px, rgba(32,32,32,.05) 0 16px 16px, rgba(49,49,49,.05) 0 32px 32px, rgba(35,35,35,.05) 0 64px 64px



