.header
	position fixed
	z-index 10
	top 0
	left 0
	width 100%
	&__top
		background-color #000000
	&__body
		padding-top 20px
		padding-bottom 20px
		tr(all .3s ease)
		opacity 1
		clr()
		.header__row
			justify-content flex-start
	&__body_hide
		opacity 0
	&__row
		display flex
		flex-flow row wrap
		justify-content space-between
		+r($d)
			justify-content flex-start
		+r($tL)
			margin-left 0
			margin-right 0
			justify-content space-between
		+r($m)
			margin-left 0
			margin-right 0
	&__button
		margin-left auto
		padding-top 18px
		padding-right 40px
		padding-bottom 16px
		padding-left 26px
		color #dc324d
		font-family $rB
		line-height 1
		text-transform uppercase
		text-decoration none
		tr(all .3s ease)
		+r($d)
			margin-left initial
		+r($tL)
			margin-left auto
			margin-right auto
		+r($m)
			margin-left auto
			margin-right auto
			padding-left 10px
			padding-right 5px
		span
			position relative
			&:after
				position absolute
				top 100%
				left 50%
				width 0
				height 2px
				content ''
				background #dc324d
				tr(all .7s cubic-bezier(.7,0,.3,1))
				will-change width
		&:hover
			color #dc324d
			text-decoration none
			span
				&:after
					left 0
					width 100%
					background #dc324d
	&__social
		margin-right 24px
		+r($d)
			margin-top 12px
			margin-left auto
		+r($tL)
			margin-top 10px
			margin-right 15px
			margin-left initial
		+r($m)
			margin-left auto
			margin-right 0

