.header
	position fixed
	z-index 10
	top 0
	left 0
	// padding-top 50px
	width 100%
	&__top
		background-color #000000

	&__body
		padding-top 20px
		padding-bottom 20px
		clr()
		.header__row
			justify-content flex-start

	&__row
		display flex
		flex-flow row wrap
		justify-content space-between

	&__button
		margin-left auto
		padding-top 18px
		padding-right 40px
		padding-bottom 16px
		padding-left 26px
		color #dc324d
		font-family $rB
		line-height 1
		text-transform uppercase
		text-decoration none
		span
			position relative
			&:after
				position absolute
				top 100%
				left 0
				width 100%
				height 2px
				background transparent
				content ''
		&:hover
			color #dc324d
			text-decoration none
			span
				&:after
					background #dc324d

	&__social
		margin-right 24px

.nav
	&__list
		margin-bottom 0
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
	&__item
		&:first-child
			.nav__link
				padding-left 0
				padding-right 30px
	&__item_course
		position relative
		background #FFF
		box-shadow 17px 0px 32px rgba(0,0,0,0.24)
		background-color #dc324d
		&:after
			position absolute
			top 50%
			right 0
			height 24px
			width 2px
			background #FFF
			content ''
			transform translateY(-50%)
		.nav__link
			padding-left 23px
			padding-right 25px
	&__item_course_pro
			&:after
				display none
	.nav__item_course_pro
		.nav__link
			padding-left 17px
			padding-right 25px
	&__link
		padding-top 11px
		padding-right 16px
		padding-bottom 12px
		padding-left 26px
		display block
		color #FFF
		line-height 2
		span
			position relative
			padding-bottom 2px
			display inline-block
			vertical-align middle
			line-height 1
			&:after
					position absolute
					top 100%
					left 0
					width 100%
					height 2px
					background transparent
					content ''
					tr(all .3s ease)
		&:hover
			color #FFF
			text-decoration none
			span
				&:after
					position absolute
					top 100%
					left 0
					width 100%
					height 2px
					background #FFF
					content ''

.social
	display flex
	flex-flow row wrap
	align-items center
	&__link
		position relative
		margin-right 14px
		display block
		width 28px
		height 28px
		border 8px solid #ffffff
		background-color #ffffff
		border-radius 50%
		text-indent -9999px
		&:last-child
			margin-right 0
		&:after
			position absolute
			top 50%
			left 50%
			content ''
			transform translate(-50%, -50%)
	&__link_inst
		&:after
			retinaSprite($inst_group)
	&__link_fb
		&:after
			retinaSprite($fb_group)

.logo
	retinaSprite($logo_group)
	text-indent -9999px
