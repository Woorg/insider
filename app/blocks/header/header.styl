.header
	position fixed
	z-index 10
	top 0
	left 0
	// padding-top 50px
	width 100%
	&__top
		background-color #000000

	&__body
		padding-top 20px
		padding-bottom 20px
		tr(all .3s ease)
		opacity 1
		clr()
		.header__row
			justify-content flex-start

	&__body_hide
		opacity 0

	&__row
		display flex
		flex-flow row wrap
		justify-content space-between

	&__button
		margin-left auto
		padding-top 18px
		padding-right 40px
		padding-bottom 16px
		padding-left 26px
		color #dc324d
		font-family $rB
		line-height 1
		text-transform uppercase
		text-decoration none
		tr(all .3s ease)
		span
			position relative
			&:after
				position absolute
				top 100%
				left 0
				width 100%
				height 2px
				background transparent
				content ''
		&:hover
			color #dc324d
			text-decoration none
			span
				&:after
					background #dc324d

	&__social
		margin-right 24px


