mixin hero()
	section.hero&attributes(attributes)
		.hero__in.container.wow.fadeInUp(data-wow-duration='1.5s')
			.hero__row.row
				.hero__col.hero__col_first
					h1.hero__title( data-title="hurma insider")
						.break-lines__line.wow.break-lines(data-wow-duration='1.5s'  data-wow-delay='1s')
							span.hero__unique.break-lines__inner Уникальный
						.break-lines__line.wow.break-lines(data-wow-duration='1.5s'  data-wow-delay='1.5s')
							.break-lines__inner практический курс
						.break-lines__line.wow.break-lines(data-wow-duration='1.5s'  data-wow-delay='2s')
							.break-lines__inner по ресторанному
						.break-lines__line.wow.break-lines(data-wow-duration='1.5s'  data-wow-delay='2.5s')
							.break-lines__inner менедженту

					.hero__text
						p для владельцев, директоров, менеджеров и шеф-поваров заведений
					.hero__buttons
						a.hero__button.button.button_primary(href="#" data-text="записаться на курс") записаться на курс
						a.hero__button.button.button_additional(href="#" data-text="узнать подробнее")
							span узнать подробнее
				.hero__col.hero__col_second
					.hero__video
						button.hero__video-button Воспроизведение
						.hero__video-text Узнайте о нас за 2 минуты

			button.hero__down Вниз


