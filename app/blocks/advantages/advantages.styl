.advantages
	&__in
		padding-top 70px
		padding-bottom 70px
	// &__row

	&__list
		margin-bottom 0
		min-height 200px
		display flex
		flex-flow row wrap
		justify-content center
	&__item
		margin-right 42px
		width 307px
		height 66px
		background-color #ffffff
		color #000000
		text-align center
		box-shadow 0 0 32px rgba(0, 0, 0, 0.11)
		&:last-child
			margin-right 0
	&__item_1
		.advantages__icon
			&:after
				retinaSprite($theory_icon_group)
	&__item_2
		.advantages__icon
			&:after
				retinaSprite($practice_icon_group)
	&__item_3
		.advantages__icon
			&:after
				retinaSprite($tools_icon_group)
	&__icon
		position relative
		margin auto
		margin-top -36px
		width 72px
		height 72px
		border-radius 36px
		background-color #dc324d
		&:after
			position absolute
			top 50%
			left 50%
			content ''
			transform translate(-50%, -50%)

	&__title
		margin-top 0
		margin-bottom 0
		font-family $s
		font-size 36px
		line-height 1.527
		text-transform uppercase
	&__text
		font-size 16px
		line-height 1.5
		p
			margin-bottom 0

