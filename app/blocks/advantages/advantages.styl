.advantages
	overflow hidden
	&__container
		@extends .container
		padding-top 136px
		padding-bottom 44px
		+r($m)
			padding-top 70px
	&__title
		margin-bottom 76px
		padding-right 20px
		padding-left 20px
		@extends .title
		line-height 1.2
		color #60cbe8
		text-align center
		+r($m)
			margin-bottom 30px
	&__list
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items flex-start
	&__item
		position relative
		margin-bottom 123px
		padding-left 126px
		width 50%
		+r($m)
			margin-bottom 35px
			padding-left 0
			width 49%
			display flex
			flex-flow column wrap
			justify-content flex-start
			align-items flex-start
			text-align center

	&__icon
		position absolute
		top 50%
		left 0
		width 110px
		height 110px
		border 3px solid #60cbe8
		background-color #ffffff
		transform translateY(-50%)
		border-radius 50%
		+r($m)
			position relative
			top 0
			margin auto
			margin-bottom 26px
			transform none
		img
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
	&__item-title
		color #60cbe8
		font-size 20px
		font-weight bold
		+r($m)
			margin-bottom 5px
			width 100%
			font-size 11px
			font-weight bold
	&__item-text
		font-size 18px
		font-weight normal
		color #595959
		+r($m)
			font-size 11px
			font-weight bold
