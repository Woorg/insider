.popup
	margin auto
	max-width 558px
	min-height 344px
	box-shadow 0 0 7px rgba(0, 0, 0, 0.14)
	background-color #ffffff
	&__top
		position relative
		min-height 67px
		background-color #60cbe8
	&__close
		position absolute
		top 16px
		right 18px
		border none
		width 37px
		height 37px
		background url('../images/general/close.png') 0 0 / cover no-repeat
		hide-text()
		opacity 1
		tr(all .3s ease)
		&:hover
			opacity 0.8
	&__body
		position relative
		padding-left 40px
		padding-right 40px
		min-height 277px
		background #FFF
		text-align center
	&__text
		position absolute
		top 50%
		left 20px
		right 20px
		color #555555
		font-size 20px
		font-weight bold
		line-height 1.5
		transform translateY(-50%)

