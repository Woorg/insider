.teachers
	&__in
		padding-top 134px
		padding-bottom 84px
	&__row
		position relative
		margin-left 0
		margin-right 0
	&__title
		margin-bottom 8px
		@extends .title-h1
	&__slider
		margin-left 65px
		margin-right 65px
	&__slide
		clr()

	&__col
		padding-left 30px
		float left
		width 438px
	&__col_wide
		padding-top 66px
		padding-left 0
		width 568px
	&__image
		position relative
		z-index 1
		width 358px
		text-align center
		&:after
			position absolute
			z-index -1
			top 0
			left 0
			width 358px
			height 358px
			background url('../images/general/teacher-circle.jpg') 0 0 / cover no-repeat
			border-radius 50%
			content ''
		img
			margin-top -15px
			display inline-block
	&__controls
		position absolute
		bottom 130px
		left 70px
		width 133px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
	&__nav
		width 80px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
	// &__count


	.slick-arrow
		position relative
		border 2px solid #dc324d
		left 0
		right 0
		width 36px
		height 36px
		background-color #ffffff
		transform none
		opacity .3
		border-radius 50%
		&:hover
			opacity 1
		&:before
			position absolute
			top 50%
			left 50%
			retinaSprite($slider_arrow_left_group)
			transform translate(-50%, -50%)
			content ''
	.slick-next
		opacity 1
		&:before
			transform translate(-50%, -50%) rotate(180deg)



.teacher
	padding-top 15px
	&__title
		margin-top 0
		margin-bottom 20px
		color #000
		font-family $rEb
		font-size 42px
		line-height 1
	&__text
		max-height 156px

