.social
	display flex
	flex-flow row wrap
	align-items center
	&__link
		position relative
		margin-right 14px
		display block
		width 28px
		height 28px
		border 8px solid #ffffff
		background-color #ffffff
		border-radius 50%
		text-indent -9999px
		&:last-child
			margin-right 0
		&:after
			position absolute
			top 50%
			left 50%
			content ''
			transform translate(-50%, -50%)
	&__link_inst
		&:after
			retinaSprite($inst_group)
	&__link_fb
		&:after
			retinaSprite($fb_group)
