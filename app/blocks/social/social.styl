.social
	display flex
	flex-flow row wrap
	align-items center
	+r($d)
		align-items flex-start
	&__link
		position relative
		margin-right 14px
		display block
		width 28px
		height 28px
		border 8px solid #fff
		background-color #fff
		border-radius 50%
		text-indent -9999px
		&:last-child
			margin-right 0
		&:after
			position absolute
			top 50%
			left 50%
			content ''
			transform translate(-50%, -50%)
	&__link_1
		&:after
			retinaSprite($inst_group)
	&__link_2
		&:after
			retinaSprite($fb_group)
