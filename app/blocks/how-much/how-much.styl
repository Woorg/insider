.how-much
	background-color #f4f7f7
	overflow hidden
	&__container
		@extends .container
		padding-top 130px
		padding-bottom 144px
		+r($m)
			padding-top 70px
			padding-bottom 70px
	&__title
		margin-bottom 46px
		@extends .title
		text-align center
		color #60cbe8
		+r($m)
			margin-bottom 30px
	&__list
		margin-bottom 52px
		+r($m)
			margin-bottom 30px
	&__item
		padding-top 20px
		padding-right 24px
		padding-bottom 20px
		padding-left 30px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
		font-weight bold
		font-size 20px
		+r($m)
			padding-left 15px
			padding-right 15px
			font-size 11px
		&:nth-child(odd)
			background #FFF
		&:nth-child(even)
			background #f4f7f7
	&__term
		color #555555
	&__desc
		color #60cbe8
	&__note
		color #8f9999
		font-size 18px
		font-weight normal
		line-height 1.333
		text-align center
		+r($m)
			font-size 11px

