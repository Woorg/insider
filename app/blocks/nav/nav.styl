.nav
	&__list
		margin-bottom 0
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
	&__item
		&:first-child
			.nav__link
				padding-left 0
				padding-right 30px
	&__item_course
		position relative
		background #FFF
		box-shadow 17px 0px 32px rgba(0,0,0,0.24)
		background-color #dc324d
		&:after
			position absolute
			z-index 1
			top 50%
			right 0
			height 24px
			width 2px
			background #FFF
			content ''
			transform translateY(-50%)
		.nav__link
			padding-left 23px
			padding-right 25px
	&__item_course_pro
			&:after
				display none
	.nav__item_course_pro
		.nav__link
			padding-left 23px
			padding-right 25px
	&__link
		padding-top 11px
		padding-right 16px
		padding-bottom 12px
		padding-left 26px
		display block
		color #FFF
		line-height 2
		span
			position relative
			padding-bottom 2px
			display inline-block
			vertical-align middle
			line-height 1
			&:after
					position absolute
					top 100%
					left 0
					width 100%
					height 2px
					background transparent
					content ''
					tr(all .3s ease)
		&:hover
			color #FFF
			text-decoration none
			span
				&:after
					position absolute
					top 100%
					left 0
					width 100%
					height 2px
					background #FFF
					content ''
