	&__item_course
		position relative
		background #FFF
		box-shadow 17px 0px 32px rgba(0,0,0,0.24)
		background-color #dc324d
		+r($d)
			background none
			box-shadow none
		&:after
			position absolute
			z-index 1
			top 50%
			right 0
			height 24px
			width 2px
			background #FFF
			content ''
			transform translateY(-50%)
			+r($d)
				display none
				color #dc324d
				background #dc324d
		.nav-list__link
			padding-left 23px
			padding-right 25px
			+r($d)
				padding-left 0
				padding-right 0
				color #dc324d
				font-family $rB
				font-size 22px
				line-height 2.181
				&:hover
					color #dc324d
					span
						&:after
							background #dc324d
	&__item_course_pro
		position relative
		background #FFF
		box-shadow 17px 0px 32px rgba(0,0,0,0.24)
		background-color #dc324d
		+r($d)
			background none
			box-shadow none
		&:after
			display none
		.nav-list__link
			padding-left 23px
			padding-right 25px
			+r($d)
				padding-left 0
				padding-right 0
				font-family $rB
				color #dc324d
				&:hover
					color #dc324d
					span
						&:after
							background #dc324d
	&__link
		padding-top 11px
		padding-right 16px
		padding-bottom 12px
		padding-left 26px
		display block
		color #FFF
		line-height 2
		+r($d)
			padding-top 0
			padding-right 0
			padding-bottom 0
			padding-left 0
			font-size 22px
			line-height 2.181
		span
			position relative
			padding-bottom 2px
			display inline-block
			vertical-align middle
			line-height 1
			&:after
				position absolute
				top auto
				bottom -2px
				left 50%
				display block
				width 0
				height 2px
				background white
				content ''
				tr(all .7s cubic-bezier(.7,0,.3,1))
				will-change width
		&:hover,
		&:focus
			color #FFF
			text-decoration none
			span
				&:after
					position absolute
					left 0
					width 100%
					height 2px
					background #FFF
					content ''
					tr(all .7s cubic-bezier(.7,0,.3,1))
					will-change width


