.nav
	&__checkbox
		display none
		&:checked +
			.nav-list
				+r($d)
					display block
	&__trigger-w
		position relative
		margin-top 14px
		outline-style none
		border none
		display none
		background none
		cursor pointer
		tr(all .2s cubic-bezier(.7,0,.3,1))
		+r($d)
			display block
		+r($tL)
			margin-left 15px
		+r($m)
			margin-left 0
	&__trigger-w_active
		tr(all .2s cubic-bezier(.7,0,.3,1))
		.nav__trigger-item
			position relative
			tr(all .2s cubic-bezier(.7,0,.3,1))
			&:first-child
				transform rotate(-45deg) translateX(-12px)
			&:nth-child(2)
				opacity 0
				visibility hidden
			&:last-child
				transform rotate(45deg) translateX(-12px) translateX(1px)
	&__trigger-item
		margin-bottom 6px
		display block
		width 28px
		height 2px
		box-shadow 0 0 32px rgba(0, 0, 0, .24)
		background-color #dc324d
		opacity 1
		tr(all .2s cubic-bezier(.7,0,.3,1))
		&:last-child
			margin-bottom 0
.nav-list
	margin-bottom 0
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items center
	+r($d)
		position absolute
		top 34px
		left 0
		right 0
		padding-top 23px
		padding-right 25px
		padding-left 25px
		padding-bottom 80px
		display none
		background #000
	+r($tL)
		padding-left 15px
		padding-right 15px
	&__item
		+r($d)
			margin auto
			max-width 970px
		&:first-child
			.nav__link
				padding-left 0
				padding-right 30px
				+r($d)
					padding-left 0
					padding-right 0
